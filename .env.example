# DeafAuth Ecosystem Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# OIDC/OpenID Connect Configuration
OIDC_ISSUER=https://deafauth.mbtq.dev
OIDC_CLIENT_ID=your_oidc_client_id
OIDC_CLIENT_SECRET=your_oidc_client_secret
OIDC_REDIRECT_URI=https://your-domain.com/auth/callback

# JWT Secret for Token Signing (use a strong random string)
JWT_SECRET=your_very_secure_random_string_min_32_chars

# Server Configuration
PORT=3000
NODE_ENV=production
API_BASE_URL=https://your-domain.com

# FFmpeg Video Authentication
VIDEO_BUCKET=deafauth-videos
MAX_VIDEO_DURATION=30
MAX_VIDEO_SIZE=52428800

# Partner Service Endpoints
PINKSYNC_ENDPOINT=https://pinksync.io/api/v1/deafauth/notify
MAGICIANS_ENDPOINT=https://360magicians.com/api/v1/accessibility/update
FIBRONROSE_ENDPOINT=https://fibronrose.mbtq.dev/api/v1/trust/sync

# Security Settings
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_VIDEO_AUTH=true
ENABLE_OIDC=true
ENABLE_PARTNER_NOTIFICATIONS=true

# Deno Runtime (if using Deno)
DENO_PERMISSIONS=--allow-net,--allow-read,--allow-write,--allow-env
